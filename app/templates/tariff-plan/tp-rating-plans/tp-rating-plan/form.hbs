{{#bs-form model=model onSubmit=(action 'save') novalidate=true as |form|}}
  <div class='form-row'>
    {{form.element
      label='Tag'
      property='tag'
      class='col-md-6'
      data-test-tag=true
    }}
    {{form.element
      label='Weight (decimal)'
      property='weight'
      controlType='number'
      step='0.1'
      min='0'
      class='col-md-6'
      data-test-weight=true
    }}
    {{input-tags
      property='destratesTag'
      form=form
      label='Destination rates tag'
      modelName='tp-destination-rate'
      tpid=model.tpid
      class='col-md-6'
      dataTest='destination-rates'
    }}
    {{input-tags
      property='timingTag'
      form=form
      label='Timing tag'
      modelName='tp-timing'
      tpid=model.tpid
      allowAny=true
      class='col-md-6'
      dataTest='timing'
    }}
  </div>
  {{bs-button defaultText='Save' type='primary' buttonType='submit' data-test-submit-button=true}}
{{/bs-form}}