{{#bs-form model=model onSubmit=(perform save) novalidate=true as |form|}}
  {{form.element label='Name' property='name' data-test-name=true}}
  {{form.element label='Alias' property='alias' data-test-alias=true}}
  {{form.element label='Description' property='description' data-test-description=true}}
  {{#bs-button
    type='primary'
    buttonType='submit'
    disabled=form.isSubmitting
    data-test-submit-button=true
  }}
    {{loading-button-text text='Save' isLoading=form.isSubmitting}}
  {{/bs-button}}
{{/bs-form}}